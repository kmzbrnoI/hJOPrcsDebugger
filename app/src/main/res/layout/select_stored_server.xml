<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_server"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saved_servers"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/stored_servers_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/stored__create_new_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorPrimaryLighten"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/colorPrimaryDark"
            app:backgroundTint="@color/colorPrimaryLighten"
            app:maxImageSize="36dp"
            app:rippleColor="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>